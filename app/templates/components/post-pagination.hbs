<ul class="pagination">
    {{#unless isFirstPage}}
        <li>{{#link-to "posts" (query-params page=previousPage) class='previous'}}{{/link-to}}</li>
    {{/unless}}
    {{#each pageNumbers as |number|}}
        {{#if (eq page number)}}
            <li>{{#link-to "posts" (query-params page=number) class='active-page'}}{{number}}{{/link-to}}</li>
        {{else}}
            <li>{{#link-to "posts" (query-params page=number)}}{{number}}{{/link-to}}</li>
        {{/if}}
    {{/each}}
    {{#unless isLastPage}}
        <li>{{#link-to "posts" (query-params page=nextPage) class='next'}}{{/link-to}}</li>
    {{/unless}}
</ul>
