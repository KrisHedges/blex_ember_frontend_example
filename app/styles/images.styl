img[alt~="large"]
  max-width 90%
  min-width 300px
  height auto

img[alt~="medium"]
  max-width 65%
  min-width 300px
  height auto

img[alt~="small"]
  max-width 45%
  min-width 300px
  height auto

img[alt~="tiny"]
  max-width 30%
  min-width 150px
  height auto

img[alt~="left"]
  display block
  float left
  margin 1em 1em 1em 0.5em

img[alt~="right"]
  display block
  float right
  margin 1em 0.5em 1em 1em

img[alt~="center"]
  display block
  margin 1em auto 1em auto

img[alt~="lightbox"]
  padding 1em 0em

.lightboxable
  position relative
  cursor pointer
  z-index 2
  transition all 200ms linear
  transform translate3d(0,0,0)
  backface-visibility hidden
  img
    z-index 2
  &:active,
  &:hover
    &:after
      position absolute
      top 80%
      left 50%
      display block
      width 40px
      height 40px
      transform translate3d(-50%, -50%, 0)
      content ''
      background-image url("data:image/png;base64,")
      background-size 40px 40px
      background-position center center
      background-repeat no-repeat
      opacity .5
      z-index 3
      float left
      clear both

.lightbox
  position absolute
  display block
  left -100%
  width 100%
  height 100%
  background rgba($deep-black, 99%)
  z-index 100
  opacity 0
  transition opacity 200ms linear
  cursor pointer
  img
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width auto
    height auto
    max-height 92%
    max-width 92%
  &.visible
    display block
    opacity 1
    left 0%
    transition opacity 200ms linear
