$heading_font = "Playfair Display"
$body_font = "Lora"

body
  font-family $body_font
  font-size 15px
  text-rendering optimizeLegibility
  font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

pre
  overflow visible

h1,h2,h3,h4,h5,h6
  font-family $heading_font
h1
  font-size 3.4em
  margin 0 0 0.2em 0
  color $black
h2
  font-size 2.7em
  margin 0 0 0.3em 0
  color $black
h3
  font-size 2.4em
  margin 0 0 0.5em 0
  color $black
  
h4
  font-size 2em
  margin 0 0 0.6em 0
h5
  font-size 1.5em
  margin 0 0 0.5em 0
  color $black

h6
  font-size 1.1em
  margin -0.5em 0 0.8em 0
  color $black
a
  display inline
  text-decoration none
  color $black
  transition all 300ms linear
  &:hover
    color $deep-purple
