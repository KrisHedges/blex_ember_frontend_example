body
  .main-menu
    background rgba($deep-black, 80%)
    font-family $body_font
    font-weight 700
    height 52px
    .hamburger
      float left
      width 38px
      height 38px
      position relative
      margin 18px 1em 0 1em
      transform rotate(0deg)
      transition all .5s ease-in-out
      cursor pointer
      span
        display block
        position absolute
        height 3px
        width 100%
        opacity 1
        left 0
        transform rotate(0deg)
        transition .5s ease-in-out
        &:nth-child(1)
          background $white
          top 0px
          z-index 1
        &:nth-child(2)
          background $white
          top 12px
          z-index 0
          visibility visible
          opacity 1
        &:nth-child(3)
          background $white
          top 24px
          z-index 2
      &.open
        span
          border 0px
          &:nth-child(1)
            transform rotate(45deg)
            top 12px
          &:nth-child(2)
            top -6px
            left -1px
            width 100%
            height 100%
            opacity 0
            visibility hidden
          &:nth-child(3)
            top 12px
            transform rotate(-45deg)
    .logo
      display block
      position absolute
      font-family $heading_font
      top 12px
      right 4%
      font-size 1.8em
      line-height 1em
      text-decoration none
      outline none
      color $white

    // Desktop Menu
    ul
      list-style none
      position relative
      float left
      margin 0
      padding 0
      li
        position relative
        float left
        margin 0
        padding 0
        a
          display block
          color $gray
          text-decoration none
          font-size 1.1em
          line-height 1.2em
          padding 1em
          &.active
            color $white
            &:after
              content ''
              display block
              position absolute
              bottom 0.7em
              left 0px
              width 80%
              margin-left 10%
              height 1px
              border-bottom 1px solid $light-gray
        &:hover
          background $light-gray
          & > ul
            display block
          a
            &.active
              color $black
              &:after
                border-bottom 1px solid $black
      ul
        display none
        position absolute
        top 100%
        left 0
        background $light-gray
        padding 0
        border-radius 0 0 3px 3px
        ul
          top 0
          left 100%
          border-radius 0 0 3px 0
        li
          float none
          width 200px
          a
            line-height 120%
            padding 1em
            &.active
              color $black
              &:after
                content ''
                display block
                position absolute
                bottom 0.7em
                left 0px
                width 80%
                margin-left 10%
                height 1px
                border-bottom 1px solid $black
          &:hover
            background $black
            a
              color $white
              &.active
                color $white
                &:after
                  content ''
                  display block
                  position absolute
                  bottom 0.7em
                  left 0px
                  width 80%
                  margin-left 10%
                  height 1px
                  border-bottom 1px solid $light-gray

body
  #main
    transition all 160ms linear
  .mobile-menu
    transition all 160ms linear
    background $black
    ul
      width 100%
      margin 0
      padding 0
      li
        width 100%
        margin 0
        padding 0
        a
          display block
          width 100%
          font-size 1.6em
          line-height 3.2em
          color $light-gray
          padding 0 1.5em
          box-sizing border-box
          &:active,
          &.active,
          &:hover
            color $white
            background $purple
          &.active
            pointer-events none
            &:after
              content ''
              display inline-block
              width 0
              height 0
              margin-left 2em
              border-top 0.35em solid transparent
              border-bottom 0.35em solid transparent
              border-left 0.35em solid $green
  &.mobile-menu-visible
    overflow hidden !important
    #main
      position absolute
      left 100%
      pointer-events none
      overflow hidden
    .mobile-menu
      position absolute
      left 0px
