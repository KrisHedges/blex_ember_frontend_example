@keyframes scroll-indicator-bounce
  0%
    bottom 10px
  50%
    bottom 20px
  100%
    bottom 10px

body
  header
    padding 7em 0em 4em 0em
    background-size cover
    background-position center center
    color $white
    text-align center
    user-select none
    padding-top 250px
    height 100%
    &.page
      height 25%
      padding 80px 0 3em 0
      &:after
        display none
    &:before
      content ''
      display block
      position absolute
      top 0
      left 0
      background $deep-black
      opacity 0.86
      width 100%
      height 100%
      z-index 1
    &:after
      content '>'
      font-size 36px
      font-weight 400
      transform rotate(90deg)
      position absolute
      bottom 10px
      left 50%
      display inline-block
      color $light-gray
      padding 11px 12px 12px 12px
      margin-left -23px
      text-align center
      border 1px solid $light-gray
      z-index 3
      opacity 1
      transition all 1s linear
      animation scroll-indicator-bounce 1s 2s ease-out infinite
    &.scrolled
      &:after
        opacity 0
    h1, h2, h3, h4, h5, h6
      color $white
      display block
      position relative
      z-index 2
      text-shadow 0px 0px 200px $deep-black
    h1
      font-size 7em